#include "application.h"



void setup() {
    Serial.begin(115200);
    pinMode(D4, OUTPUT);
    pinMode(D5, OUTPUT);
    pinMode(D1, OUTPUT);
    pinMode(D3, OUTPUT);
}

void loop() {
    uint32_t duration, cm;
    
    digitalWriteFast(D2, HIGH);
    delayMicroseconds(10);
    digitalWriteFast(D2, LOW);
  
    duration = pulseIn(D6, HIGH);
    
    cm = duration / 29 / 2;
    
        if(cm > 30 & cm < 50)
    {
        digitalWrite(D5, HIGH);
        digitalWrite(D4, HIGH);
        delay(7000);
        digitalWrite(D5, LOW);
        digitalWrite(D4, LOW);
        delay(7000);
    }
    if (cm < 31)
    {
        digitalWrite(D3, HIGH);
        digitalWrite(D1, HIGH);
        delay(7000);
        digitalWrite(D3, LOW);
        digitalWrite(D1, LOW);
        delay(7000);
    }
}
